{
  "name": "product-tracing-backend",
  "version": "1.0.0",
  "description": "Blockchain-based product tracing system using Hyperledger Fabric",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "init": "node init.js",
    "register-admin": "node registerAdmin.js",
    "register-participants": "node registerParticipants.js",
